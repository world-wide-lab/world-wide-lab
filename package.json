{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:playwright": "npm run test:playwright --workspaces --if-present",
    "test:docker": "./docker/run-test.sh",
    "format": "npx @biomejs/biome check . --apply --linter-enabled=false",
    "check": "npm run format && npm run build && npm run test",
    "build": "npm run build --workspaces --if-present"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "jest": "^29.5.0"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/server",
      "<rootDir>/packages/client",
      "<rootDir>/packages/test-server",
      "<rootDir>/packages/integration-jsPsych"
    ]
  }
}
