{
  "files": {
    "ignore": [
      "dist/**",
      "docs/.vitepress/cache/**",
      ".adminjs/**",
      "monaco-editor/**",
      "packages/server/static/adminjs/**",
      "*.min.css"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noExplicitAny": "off"
      },
      "complexity": {
        "noBannedTypes": "off"
      }
    }
  }
}
