{
  "files": {
    "ignore": ["dist/**", "docs/.vitepress/cache/**"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noExplicitAny": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off"
      }
    }
  }
}
